<% provide(:title, "プロフィール編集") %>
<div class="row">
  <div class="container">
    <h1 class="form-title">プロフィール編集</h1>
    <%= form_with(model: @user, local: true) do |f| %>
      <%#= render 'shared/error_messages' %>

      <div class="card-deck">
        <div class="col-md-6">
          <section class="card">
            <h2 class="card-header">アカウント情報変更</h2>
            <div class="card-body">
              <%= render 'shared/error_messages' %>

              <div class="form-group">
                <%= f.label :name, class: 'form-control-label' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :email, class: 'form-control-label' %>
                <%= f.email_field :email, class: 'form-control', placeholder: "例 anime.searcher@gmail.com" %>
              </div>

              <div class="form-group">
                <%= f.label :password, class: 'form-control-label' %>
                <%= f.password_field :password, class: 'form-control', placeholder: "※ 半角英数字 6文字以上" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: 'form-control-label' %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.submit class: "btn btn-info btn-lg form-submit" %>
              </div>

            </div>
          </section>
        </div>

        <div class="col-md-6">
          <section class="card">
            <h2 class="card-header">プロフィール画像変更</h2>
            <div class="card-body">
              <div class="gravatar_edit">
                <%= gravatar_for @user %>
                <a href="https://gravatar.com/emails" target="_blank">画像変更</a>
              </div>
            </div>
          </section>
        </div>
      </div>
    <% end %>

    <!-- <div class="gravatar_edit">
      <%#= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">イメージ画像変更</a>
    </div> -->
  </div>
</div>
