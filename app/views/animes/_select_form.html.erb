<%= form_with model: @anime, url: search_path, method: :get, local: true do |form| %>
  <%= form.select :keyword, [ ['表示順を選択', 'default'],
                            ['５０音順', 'furigana'],
                            ['投稿が新しい順', 'new'],
                            ['投稿が古い順', 'old'],
                            # ['お気に入り登録が多い順', 'likes'],
                            # ['お気に入り登録が少ない順', 'dislikes'],
                          ], {include_blank: false}, {class:'form-control'} %>
  <%= form.submit "並び替える", class: "btn btn-info btn-lg form-submit" %>
<% end %>
